## nerd fonts / languages fonts for system/browser

sudo pacman -S noto-fonts-emoji noto-fonts noto-fonts-cjk noto-fonts-extra
sudo pacman -S ttf-jetbrains-mono-nerd ttf-font-awesome
fc-cache -fv

## polkit 
sudo pacman -S polkit polkit-gnome

##networkmanager
sudo systemctl enable NetworkManager
sudo systemctl start NetworkManager
## might need nm-applet & 
reboot

##volume control
sudo pacman -S pavucontrol 

## Explorer tumbnails
sudo pacman -S ffmpegthumbnailer
rm -rf ~/.cache/thumbnails/fail/*

