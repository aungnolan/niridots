// Waybar Configuration — Floating Pills Design
{
    "layer": "top",
    "position": "top",
    "height": 44,
    "spacing": 4,
    "margin-top": 2,
    "margin-bottom": 2,
    "margin-left": 2,
    "margin-right": 2,
    "exclusive": true,
    "modules-left": [
        "custom/logo",
        "niri/workspaces",
        "mpris"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "backlight",
        "pulseaudio",
        "bluetooth",
        "network",
        "cpu",
        "memory",
        "battery",
        "custom/power"
    ],
    // ── Left ──────────────────────────────────────────────
    "custom/logo": {
        "format": "󰣇",
        "tooltip": false,
        "on-click": "fuzzel"
    },
    "niri/workspaces": {
        "format": "{index}",
        "on-click": "activate"
    },
    // ── Center ───────────────────────────────────────────
    "clock": {
        "format": "󰅐  {:%I:%M %p}",
        "format-alt": "󰃶  {:%A, %B %d}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#cba6f7'><b>{}</b></span>",
                "days": "<span color='#cdd6f4'>{}</span>",
                "weeks": "<span color='#94e2d5'><b>W{}</b></span>",
                "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
                "today": "<span color='#f38ba8'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    // ── Right ────────────────────────────────────────────
    "mpris": {
        "format": "{player_icon}  {title}",
        "format-paused": "{status_icon}  <i>{title}</i>",
        "format-stopped": "",
        "format-disconnected": "",
        "player-icons": {
            "default": "󰎆",
            "spotify": "󰓇",
            "firefox": "󰈹",
            "mpv": "󰐹"
        },
        "status-icons": {
            "paused": "󰏤"
        },
        "max-length": 40
    },
    "backlight": {
        "format": "{icon}  {percent}%",
        "format-icons": [
            "󰃞",
            "󰃟",
            "󰃠"
        ],
        "on-scroll-up": "brightnessctl set +2%",
        "on-scroll-down": "brightnessctl set 2%-"
    },
    "bluetooth": {
        "format": "󰂯",
        "format-connected": "󰂱  {device_alias}",
        "on-click": "blueman-manager",
        "on-click-right": "rfkill toggle bluetooth"
    },
    "tray": {
        "icon-size": 15,
        "spacing": 8
    },
    "battery": {
        "states": {
            "good": 80,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "󱐋  {capacity}%",
        "format-plugged": "󰚥  {capacity}%",
        "format-full": "󱟢  Full",
        "format-icons": [
            "󰂎",
            "󰁺",
            "󰁻",
            "󰁼",
            "󰁽",
            "󰁾",
            "󰁿",
            "󰂀",
            "󰂁",
            "󰂂",
            "󰁹"
        ],
        "tooltip-format": "Battery: {capacity}%\nPower: {power:.1f}W\nTime: {timeTo}"
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "󰂰  {volume}%",
        "format-muted": "󰸈  Muted",
        "format-icons": {
            "headphone": "󰋋",
            "hands-free": "󰋎",
            "headset": "󰋎",
            "default": [
                "󰕿",
                "󰖀",
                "󰕾"
            ]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "tooltip-format": "{desc}"
    },
    "network": {
        "format-wifi": "󰖩",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰖪",
        "format-alt": "󰜮  {bandwidthDownBits}  󰜷  {bandwidthUpBits}",
        "tooltip-format": "{essid}\nInterface: {ifname}\nIP: {ipaddr}/{cidr}\nSignal: {signalStrength}%",
        "interval": 5,
        "on-click-right": "nm-connection-editor"
    },
    "cpu": {
        "format": "󰍛  {usage}%",
        "interval": 2,
        "tooltip-format": "CPU Usage: {usage}%\n{avg_frequency} GHz",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "memory": {
        "format": "󰘚  {percentage}%",
        "interval": 5,
        "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
        "states": {
            "warning": 70,
            "critical": 90
        }
    },
    "custom/power": {
        "format": "󰐥",
        "tooltip": false,
        "on-click": "niri msg action quit"
    }
}
